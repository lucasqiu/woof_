<?xml version="1.0" encoding="utf-8" ?>
<feeds>
  <!-- English feeds begin here -->
  <language name="english" tag="eng">

  <channel name="npr_news" active="1">
      <url><![CDATA[http://www.npr.org/rss/rss.php?id=1001]]></url>
      <xpath><![CDATA[div#storytext > p]]></xpath>
      <img_xpath><![CDATA[div#storytext img[src]]]></img_xpath>
    </channel>
	<channel name="voa_news" active="1">
      <url><![CDATA[http://www.voanews.com/templates/Articles.rss?sectionPath=/english/news]]></url>
      <xpath><![CDATA[div.articleContent div.zoomMe > *]]></xpath>
      <img_xpath><![CDATA[div[class^=contentImage] img[src]]]></img_xpath>  
  </channel>

  <channel name="bbc_top_stories" active="1">
      <url><![CDATA[http://feeds.bbci.co.uk/news/rss.xml]]></url>
      <xpath><![CDATA[div.story-body > p]]></xpath>
      <img_xpath><![CDATA[div[class^=caption] img[src]]]></img_xpath>  
  </channel>

  <channel name="cnn_top_stories" active="1">
      <url><![CDATA[http://rss.cnn.com/rss/cnn_topstories.rss]]></url>
      <xpath><![CDATA[div.cnn_strycntntlft > p.cnn_storypgraphtxt]]></xpath>
      <img_xpath><![CDATA[div[class^=cnnArticleGalleryPhotoContainer] img[src]]]></img_xpath>  
  </channel>
  
<!-- Scott: Huffington Post && cnn  -->
  <channel name="huffington_post" active="1">
      <url><![CDATA[http://www.huffingtonpost.com/feeds/index.xml]]></url>
      <xpath><![CDATA[div.content > p]]></xpath>
      <img_xpath><![CDATA[div.main-visual.group.embedded-image img[data-img-path]]]></img_xpath>  
  </channel>
 

